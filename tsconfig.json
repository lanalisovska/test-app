{
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": ["components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  "include": [
    "next.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.ts",
    "src",
    "test",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "*.eslintrc.js" // Include the .eslintrc.js file here
    ,
    "jest.config.js",
    "src/interfaces.js",
    "jest.setup.js"
, "components", "helpers", "interfaces", "pages", "styles"  ],
  "exclude": [
    "node_modules"
  ]
}
